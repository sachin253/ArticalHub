<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
xmlns:app="http://schemas.android.com/apk/res-auto"
tools:context=".Fragment.Publish">

<!-- TODO: Update blank fragment layout -->

    <TextView
        android:id="@+id/article_lable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="40dp"
        android:text="Add a new article"
        android:textColor="#0B0B0B"
        android:textSize="16dp"
        android:hint="Title"
        app:fontFamily="@font/abril_fatface" />
    <Button
        android:layout_width="wrap_content"
         android:id="@+id/poceedBtn"
         android:layout_height="wrap_content"
         android:text="Proceed"
         android:layout_toRightOf="@id/article_lable"
         android:layout_marginTop="30dp"
         style="@style/Widget.AppCompat.Button.Colored"
         android:layout_marginLeft="60dp"></Button>

    <EditText
        android:id="@+id/TitleEditText1"
        android:layout_width="300dp"
        android:inputType="textMultiLine"
        android:layout_height="wrap_content"
        android:layout_below="@id/article_lable"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="30dp"
        android:ems="10"
        android:hint="Title"
        android:maxLines="2"
        android:textColorHint="#716767"
        android:textSize="15dp" />

    <EditText
        android:id="@+id/ContentId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/TitleEditText1"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:hint="Start adding content here......"
        android:inputType="textMultiLine"
        android:lines="15"
        android:maxLines="1000"
        android:scrollbars="vertical" />

    <ImageView
        android:id="@+id/UploadImageId"
        android:layout_width="55dp"
        android:layout_height="48dp"
        android:layout_below="@id/ContentId"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="4dp"
        android:src="@drawable/upload" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ImageLable"
        android:layout_toRightOf="@id/UploadImageId"
        android:layout_below="@id/ContentId"
        android:text="Please select an image.."
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp">
    </TextView>

<ImageView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/ArticleImageViewId"
    android:layout_below="@+id/UploadImageId"
    android:layout_marginTop="5dp"></ImageView>


</RelativeLayout>